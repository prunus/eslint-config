{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [ "ESNext" ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [],
  "include": [
    ".eslintrc.js",
    "rules/best-practices.js",
    "rules/errors.js",
    "rules/es6.js",
    "rules/import-helpers-react.js",
    "rules/import-helpers.js",
    "rules/react-hooks.js",
    "rules/react.js",
    "rules/stylistic.js",
    "rules/typescript.js",
    "rules/variables.js",
  ]
}
